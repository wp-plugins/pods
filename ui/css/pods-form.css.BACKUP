/* ============================= */

/* = GENERAL FORM FIELD STYLES = */

/* ============================= */



/* Required: form must have class of pods */



form.pods div { overflow:hidden; zoom:1; }

.pods-sort-handles { display:block; cursor:move; }



form.pods tr.expanded { background:#f1f1f1; }

form.pods tr.expanded td.field-machine-name,

form.pods tr.expanded td.field-type,

form.pods tr.expanded td.field-comment { display: none; }



form.pods tr.expanded div.row-actions { visibility:hidden; }



form.pods tr.expanded th.check-field img.pods-sort-handles { visibility: hidden; }



form.pods tr.ui-sortable-helper {

	background-color: #dddddd;

	opacity: .5;

}



form.pods tr.disabled { color: #dfdfdf; }



form.pods tr.disabled a,

form.pods tr.disabled code {

	color: #dfdfdf;

	background: none;

}



form.pods tr.ui-sortable-helper th,

form.pods tr.ui-sortable-helper td { border: 0; }



form.pods tr.ui-sortable-helper td.field-machine-name,

form.pods tr.ui-sortable-helper td.field-type,

form.pods tr.ui-sortable-helper td.field-comment { display: none; }



form.pods tr.ui-sortable-helper td.field-label { width: 100%; }



form.pods tr.ui-sortable-placeholder + tr th,

form.pods tr.ui-sortable-placeholder + tr td { border-top: 1px solid #dfdfdf; }



/* Single line input */

form.pods .pods-textfield { padding:5px 0; }

form.pods .pods-textfield label { display:block; float:left; width:30%; }

form.pods .pods-textfield input,
form.pods .pods-textfield select { display:block; float:right; width:65%; }







/* Select */

form.pods .pods-select { padding:5px 0; }

form.pods .pods-select label { display:block; float:left; width:30%; }

form.pods .pods-select select { display:block; float:right; width:65%; }







/* Checkbox */

form.pods .pods-checkbox { padding:5px 0; }

form.pods .pods-checkbox input { display:block; float:left; margin-right:7px; }

form.pods .pods-checkbox label { display:block; float:left; padding-top:1px; }





/* Picks */



/* Pick - Checkbox */

form.pods .pods-pick-alt p { font-weight:bold; margin-bottom:5px; }

form.pods .pods-pick-alt .pods-pick-choices { max-height:100px; overflow:auto; margin-right:25px; }



.pods-group { overflow:hidden; zoom:1; }







/* ==================== */

/* = POD SETUP SCREEN = */

/* ==================== */



/* Advanced Settings */

.pods-admin #poststuff { padding-top:10px; }

.pods-admin #poststuff #pods-manage-settings { padding-top:10px; }

.pods-admin #poststuff #pods-pod-advanced-settings .hndle { cursor:default; }

.pods-admin #poststuff #pods-pod-advanced-settings .inside fieldset { padding-bottom:10px; }

.pods-admin #poststuff #pods-pod-advanced-settings .inside legend { display:none; }

.pods-admin #poststuff #pods-pod-advanced-settings .inside .pods-helper { width:25%; float:left; }

.pods-admin #poststuff #pods-pod-advanced-settings .inside .pods-pick { padding-top:10px; }

.pods-admin #poststuff #pods-pod-advanced-settings .inside .pods-pick p { margin-bottom:5px; }



.pods-admin #poststuff #titlediv #titlewrap input { margin:0; }



.pods-admin .pods-tab-field-attributes { border:1px solid #dfdfdf; border-bottom:0; }

.pods-admin .pods-manage-field .pods-field-detail { padding:10px; border-bottom:1px solid #dfdfdf; background:#fcfcfc; }

.pods-admin .pods-manage-field .pods-field-detail:nth-child(odd) { background:#fff; }

.pods-admin .pods-manage-field .pods-field-detail label { padding-top:4px; }



.pods-admin .pods-pick { }

.pods-admin .pods-pick p.pods-pick-label { width:30%; float:left; padding-top:4px; }

.pods-admin .pods-pick div.pods-pick-values { width:65%; float:right; padding-bottom:5px; }

.pods-admin .pods-pick div.pods-pick-values .pods-checkbox { padding-bottom:0; }

.pods-admin .pods-pick div.pods-pick-values input { position:relative; top:2px; }

.pods-admin .pods-pick div.pods-pick-values label { padding-top:0; }



.pods-admin .pods-advanced { clear:both; padding-top:10px; }



.pods-admin .pods-add-field { clear:both; padding:15px 0; }



.pods-admin .pods-field-actions { clear:both; padding:15px 0; }

.pods-admin .pods-advanced-toggle { width:40%; float:left; }

.pods-admin .pods-save-field { width:40%; float:right; text-align:right; }



.pods-admin .pods-location-condition-wrapper { overflow:hidden; zoom:1; padding:2px 0 5px; }

.pods-admin .pods-location-condition-wrapper select { display:block; float:left; }

.pods-admin .pods-location-condition-wrapper select.pods-location-condition { width:100px; margin-right:7px; }

.pods-admin .pods-location-condition-wrapper select.pods-location-operator { width:55px; margin-right:7px; }

.pods-admin .pods-location-condition-wrapper select.pods-location-limiter { width:65px; }

.pods-admin .pods-location-condition-wrapper span.pods-location-condition-delete { display:block; float:right; overflow:hidden; text-indent:-9999px; width:16px; height:25px; cursor:pointer; background:url(data:image/png;base64,%3D%3D) 50% 50% no-repeat; }



p.pods-location-condition-add { clear:both; padding:5px 0 0; }



.pods-admin .pods-child-hidden,

.pods-admin .pod-slug-field { display:none; }

.pods-admin h3 { cursor:auto; }

.pods-admin h2 a.cancel { font-size:12px; }



.pods-manage-field-wrapper,

.pods-manage-field-wrapper .pods-advanced { display:none; }



/* Groups */

.pods-admin tr.pods-group-fields td { padding:0; }

.pods-admin tr.pods-group-fields td table { width:100%; }



.pods-helpers { padding-bottom:15px; }

.pods-dependent-on { padding-top:15px; }


/* Tabs */
.pods-manage-field-wrapper {max-width:500px;}
.pods-manage-field-wrapper h4 {margin: 5px 10px;}
.pods-tab-field-attributes {margin-top:-1px;margin-bottom:15px;}
.pods-specific-field-attributes,
.pods-advanced-field-attributes {display:none;}
.tab-navigation:before,
.tab-navigation:after {content:"";display:table;}
.tab-navigation:after {clear:both;}
.tab-navigation {zoom:1;}
.tab-item {float:left;margin:0;}
.tab-navigation li a {background:#e9e9e9;display:block;border:1px solid #dfdfdf;float:left;font-size:14px;margin-right:5px;padding:5px 10px;-moz-border-radius-topleft: 5px;-moz-border-radius-topright: 5px;-moz-border-radius-bottomright: 0px;-moz-border-radius-bottomleft: 0px;-webkit-border-radius: 5px 5px 0px 0px;border-radius: 5px 5px 0px 0px;}
.tab-navigation li a.selected {border-bottom:1px solid white;background:white;}